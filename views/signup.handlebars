<div class="signIn">

  <h1 class="title" style="color:rgb(70, 80, 75); font-weight:bold;">Create an Account</h1>

  <form class="form signup-form">

    <div class="form-group">
      <label for="user-login" class="login">enter username:</label>
      <br>
      <input class="form-input newInput" type="text" id="uName-signup" />
    </div>

    <br>

    <div class="form-group">
      <label for="email-login" class="login">enter email:</label>
      <br>
      <input class="form-input newInput" type="text" id="email-signup" />
    </div>

    <br>

    <div class="form-group">
      <label for="password-login" class="login"> choose password (7 or more characters):</label>
      <br>
      <input class="form-input newInput" type="password" id="password-signup" />
    </div>

    <br>

    <div class="form-group">
      <button class="loginBtn" type="submit">Sign Up</button>
    </div>

  </form>

</div>

<script src="/js/signup.js"></script>